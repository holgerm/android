<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.bonn.mobilegaming.geoquest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="9" />

    <application
        android:name="GeoQuestApp"
        android:icon="@drawable/icon"
        android:label="GeoQuest"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <uses-library android:name="com.google.android.maps" />

        <activity
            android:name=".Start"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RepoListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qeevee.gq.history.HistoryActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.qeevee.ui.FullScreenImage"
            android:label="@string/app_name"
            android:screenOrientation="sensor" />
        <activity
            android:name=".mission.StartAndExitScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mission.MapOverview"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mission.OSMap"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mission.NPCTalk"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mission.WebPage"
            android:label="@string/app_name"
            android:screenOrientation="sensor" />
        <activity
            android:name=".mission.WebTech"
            android:label="@string/app_name"
            android:screenOrientation="sensor" />
        <activity
            android:name=".mission.QRTagReading"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mission.QRTagReadingProduct"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mission.QRTagReadingTreasure"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mission.ImageCapture"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mission.AudioRecord"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mission.VideoPlay"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity
            android:name=".mission.QuestionAndAnswer"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mission.MultipleChoiceQuestion"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".mission.TextQuestion"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name="Preferences"
            android:label="@string/preferencesTitle"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".mission.Info"
            android:label="@string/app_name"
            android:screenOrientation="landscape" />
        <activity
            android:name=".mission.ExternalMission"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
    </application>

</manifest>